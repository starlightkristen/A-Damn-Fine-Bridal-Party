    <script>
        function showTab(tabName) {
            const tabContents = document.querySelectorAll('.tab-content');
            tabContents.forEach(tab => tab.classList.remove('active'));
            
            const tabButtons = document.querySelectorAll('.tab-button');
            tabButtons.forEach(button => button.classList.remove('active'));
            
            document.getElementById(tabName).classList.add('active');
            event.target.classList.add('active');
        }

        function updateBrideName() {
            const brideName = document.getElementById('bride-name').value;
            document.getElementById('bride-name-display').textContent = brideName || 'your amazing friend';
        }

        function updateProgress() {
            const checkboxes = document.querySelectorAll('input[type="checkbox"]');
            checkboxes.forEach(checkbox => {
                const item = checkbox.parentElement;
                if (checkbox.checked) {
                    item.classList.add('completed');
                } else {
                    item.classList.remove('completed');
                }
            });
        }

        function calculateTotal() {
            // Calculate shower total
            const showerInputs = ['venue-shower', 'food-shower', 'decor-shower', 'invites-shower', 'favors-shower', 'activities-shower', 'photo-shower', 'misc-shower'];
            let showerTotal = 0;
            showerInputs.forEach(id => {
                const value = parseFloat(document.getElementById(id)?.value) || 0;
                showerTotal += value;
            });
            
            // Calculate bachelorette total
            const bachInputs = ['accommodation-bach', 'transport-bach', 'activities-bach', 'food-bach', 'swag-bach', 'photo-bach', 'misc-bach'];
            let bachTotal = 0;
            bachInputs.forEach(id => {
                const value = parseFloat(document.getElementById(id)?.value) || 0;
                bachTotal += value;
            });
            
            // Update displays
            document.getElementById('shower-total').textContent = `Shower Total: $${showerTotal.toFixed(2)}`;
            document.getElementById('bach-total').textContent = `Bachelorette Total: $${bachTotal.toFixed(2)}`;
            document.getElementById('grand-total').textContent = `Grand Total: $${(showerTotal + bachTotal).toFixed(2)}`;
        }

        function calculateBudget() {
            const totalBudget = parseFloat(document.getElementById('total-available')?.value) || 0;
            const showerPercent = parseFloat(document.getElementById('shower-percent')?.value) || 60;
            const bachPercent = parseFloat(document.getElementById('bach-percent')?.value) || 40;
            
            const showerBudget = totalBudget * (showerPercent / 100);
            const bachBudget = totalBudget * (bachPercent / 100);
            
            document.getElementById('shower-budget-calc').textContent = showerBudget.toFixed(2);
            document.getElementById('bach-budget-calc').textContent = bachBudget.toFixed(2);
        }

        function calculateDeadlines() {
            const startDate = new Date(document.getElementById('start-date-timeline')?.value);
            if (!startDate) return;
            
            // This would calculate and display personalized deadlines
            // For now, it's a placeholder for future enhancement
        }

        // Auto-save functionality placeholder
        function autoSave() {
            // Note: In a real implementation, this would save to localStorage or a backend
            // For Claude artifacts, users should copy/paste to save externally
        }

        // Add event listeners for auto-saving
        document.addEventListener('DOMContentLoaded', function() {
            const inputs = document.querySelectorAll('input, textarea, select');
            inputs.forEach(input => {
                input.addEventListener('change', autoSave);
            });
        });
    </script>
